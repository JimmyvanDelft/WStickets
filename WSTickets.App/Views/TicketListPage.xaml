<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:model="clr-namespace:WSTickets.App.Models"
    xmlns:viewmodel="clr-namespace:WSTickets.App.ViewModels"
    x:Class="WSTickets.App.Views.TicketListPage"
    x:DataType="viewmodel:TicketListViewModel"
    Title="My Tickets">

    <Grid RowDefinitions="Auto, *">

        <!-- 1) FILTER BAR -->
        <Frame
      Grid.Row="0"
      BackgroundColor="LightGray"
      Padding="15"
      Margin="10,5"
      CornerRadius="8">
            <Grid RowDefinitions="Auto,Auto,Auto"
            ColumnDefinitions="*,*">

                <!-- Active Toggle -->
                <HorizontalStackLayout Grid.Row="0" Grid.ColumnSpan="2"
                               Spacing="10"
                               Margin="0,0,0,10">
                    <CheckBox IsChecked="{Binding ShowActiveOnly}" />
                    <Label Text="Show only active tickets"
                 VerticalOptions="Center"
                 FontAttributes="Bold"/>
                </HorizontalStackLayout>

                <!-- Status & Priority -->
                <material:PickerField
          Grid.Row="1" Grid.Column="0"
          Title="Filter by Status"
          ItemsSource="{Binding StatusFilterOptions}"
          SelectedItem="{Binding SelectedStatusString, Mode=TwoWay}"
          Margin="0,0,5,10" />

                <material:PickerField
          Grid.Row="1" Grid.Column="1"
          Title="Filter by Priority"
          ItemsSource="{Binding PriorityFilterOptions}"
          SelectedItem="{Binding SelectedPriorityString, Mode=TwoWay}"
          Margin="5,0,0,10" />

                <!-- Sort + Clear -->
                <material:PickerField
          Grid.Row="2" Grid.Column="0"
          Title="Sort by"
          ItemsSource="{Binding SortOptions}"
          SelectedItem="{Binding SelectedSortOption}"
          Margin="0,0,5,0" />

                <Button
          Grid.Row="2" Grid.Column="1"
          Text="Clear Filters"
          Command="{Binding ClearFiltersCommand}"
          BackgroundColor="{StaticResource Primary}"
          TextColor="White"
          CornerRadius="6"
          HeightRequest="40"
          VerticalOptions="End"
          Margin="5,0,0,0"/>
            </Grid>
        </Frame>

        <!-- 2) TICKETS LIST -->
        <RefreshView
      Grid.Row="1"
      Command="{Binding RefreshCommand}"
      IsRefreshing="{Binding IsRefreshing}">
            <StackLayout>

                <!-- No-tickets / error messages -->
                <Label
          Text="No tickets found with current filters. Try adjusting your filters or create a new ticket by clicking the plus button."
          IsVisible="{Binding NoTicketsMessageVisible}"
          HorizontalOptions="Center"
          VerticalOptions="Center"
          TextColor="Gray"
          FontAttributes="Italic"
          Margin="20"/>
                <Label
          Text="{Binding ErrorMessage}"
          IsVisible="{Binding HasError}"
          TextColor="Red"
          HorizontalOptions="Center"
          Margin="10"/>

                <!-- YOUR ORIGINAL TEMPLATE RESTORED -->
                <CollectionView
          ItemsSource="{Binding Tickets}"
          SelectionMode="None"
          Margin="5,0">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:Ticket">
                            <Frame
                Margin="10"
                Padding="12"
                BorderColor="#ddd"
                CornerRadius="12"
                HasShadow="True">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer
                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:TicketListViewModel}}, Path=GoToTicketCommand}"
                    CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>

                                <VerticalStackLayout Spacing="6">
                                    <!-- Reporter ID badge -->
                                    <HorizontalStackLayout VerticalOptions="Center" Spacing="10">
                                        <BoxView
                      WidthRequest="8"
                      HeightRequest="8"
                      BackgroundColor="{StaticResource Primary}"
                      CornerRadius="4"/>
                                        <Label
                      Text="{Binding ReporterName}"
                      FontSize="13"
                      TextColor="Gray"/>
                                    </HorizontalStackLayout>

                                    <!-- Title -->
                                    <Label
                    Text="{Binding Title}"
                    FontAttributes="Bold"
                    FontSize="16"
                    TextColor="Black"/>

                                    <!-- Company -->
                                    <Label
                                        Text="{Binding CompanyName}"
                                        FontSize="13"
                                        TextColor="#555"/>

                                    <!-- Description -->
                                    <Label
                                            Text="{Binding Description}"
                                            FontSize="13"
                                            TextColor="#555"
                                            LineBreakMode="TailTruncation"
                                            MaxLines="2"/>

                                    <!-- ID, Priority Icon, Status Badge -->
                                    <HorizontalStackLayout Spacing="10" Padding="0,4,0,0">
                                        <Label
                      Text="{Binding Id, StringFormat='#\{0\}'}"
                      FontSize="12"
                      TextColor="DarkGray"
                      BackgroundColor="#F0F0F0"
                      Padding="6,2"/>
                                        <Image
                      Source="{Binding Priority, Converter={StaticResource PriorityToImageConverter}}"
                      HeightRequest="24"
                      WidthRequest="24"
                      VerticalOptions="Center"/>
                                        <Label
                      Text="{Binding CurrentStatus}"
                      FontSize="12"
                      TextColor="White"
                      BackgroundColor="{Binding CurrentStatus, Converter={StaticResource StatusToColorConverter}}"
                      Padding="6,2"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </RefreshView>

        <!-- 3) Floating New Button -->
        <Button
      Grid.Row="1"
      Text="+"
      FontSize="28"
      WidthRequest="60"
      HeightRequest="60"
      CornerRadius="30"
      BackgroundColor="{StaticResource Primary}"
      TextColor="White"
      HorizontalOptions="End"
      VerticalOptions="End"
      Margin="20"
      Clicked="OnNewTicketButtonClicked"/>
    </Grid>
</ContentPage>
