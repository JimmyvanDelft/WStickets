<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WSTickets.App.Views.TicketListPage"
             Title="Mijn Tickets">

    <RefreshView Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsRefreshing}">
        <CollectionView ItemsSource="{Binding Tickets}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10" Padding="10" BorderColor="Gray" CornerRadius="8">
                        <StackLayout>
                            <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="16"/>
                            <Label Text="{Binding Description}" FontSize="13" LineBreakMode="TailTruncation"/>
                            <Label Text="{Binding Priority}" FontSize="12" TextColor="DarkOrange"/>
                            <Label Text="{Binding CurrentStatus}" FontSize="12" TextColor="DarkGreen"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>

</ContentPage>
