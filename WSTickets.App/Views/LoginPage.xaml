<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WSTickets.App.Views.LoginPage"
             Title="Login">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="30" Spacing="15">

                <Label Text="Username" />
                <Entry Text="{Binding Username}" Placeholder="Type your username" />

                <Label Text="Password" />
                <Entry Text="{Binding Password}" IsPassword="True" Placeholder="Type your password" />

                <Button Text="Login" Command="{Binding LoginCommand}" />

                <Label Text="{Binding ErrorMessage}" 
                       TextColor="Red"
                       FontAttributes="Italic"
                       IsVisible="{Binding HasError}" 
                       Margin="0,10,0,0"
                       HorizontalOptions="Center" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
