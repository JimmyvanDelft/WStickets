<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WSTickets.App.Views.LoginPage"
             Title="Inloggen">
    <ContentPage.Content>
        <StackLayout Padding="30" Spacing="15">
            <Label Text="Gebruikersnaam" />
            <Entry Text="{Binding Username}" Placeholder="Voer je gebruikersnaam in" />

            <Label Text="Wachtwoord" />
            <Entry Text="{Binding Password}" IsPassword="True" Placeholder="Voer je wachtwoord in" />

            <Button Text="Login" Command="{Binding LoginCommand}" />

            <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding HasError}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
