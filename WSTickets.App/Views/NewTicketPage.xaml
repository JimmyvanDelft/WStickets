<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:viewmodel="clr-namespace:WSTickets.App.ViewModels"
    x:Class="WSTickets.App.Views.NewTicketPage"
    x:DataType="viewmodel:NewTicketViewModel"
    Title="New Ticket">

    <ScrollView>
        <StackLayout
            Padding="20"
            Spacing="20">

            <!-- Title -->
            <material:TextField
                Title="Title"
                Text="{Binding Title}" />

            <!-- Description -->
            <material:EditorField
                Title="Description"
                Text="{Binding Description}"/>

            <!-- Priority picker -->
            <material:PickerField
                Title="Priority"
                ItemsSource="{Binding Priorities}"
                SelectedItem="{Binding SelectedPriority}" />

            <!-- Add Screenshot button -->
            <Button
          Text="Add Screenshot"
          Command="{Binding AddScreenshotCommand}"
          HeightRequest="50"
          CornerRadius="12" />

            <!-- Preview of pending attachments -->
            <CollectionView
          ItemsSource="{Binding AttachmentPreviews}"
          ItemsLayout="HorizontalList"
          HeightRequest="100">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="0" HasShadow="False" CornerRadius="8" HeightRequest="80" WidthRequest="80">
                            <Image
                  Source="{Binding}"
                  Aspect="AspectFill"/>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Submit button -->
            <Button
                Text="Create Ticket"
                Command="{Binding CreateTicketCommand}"
                HeightRequest="50"
                CornerRadius="12" />

        </StackLayout>
    </ScrollView>
</ContentPage>
